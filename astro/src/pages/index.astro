---
import Layout from '../layouts/Layout.astro';	

const name = 'juswaa';
const style = 'purple';
// const users = ['clancy','nico','ned','trash the dragon'];

//conditionals
const visible = true;

//tip: async is wrapped around astro components (we can use await anywhere within implementing async)
const response = await fetch('https://jsonplaceholder.typicode.com/users?_limit=10');
const users = await response.json();
---

<Layout> <!-- wrapper/empty fragment -->
	<!-- <h1>Hello { 1 + 1 }</h1> -->
	<h1 class={style}>Hello { name }</h1>

	<!-- similar to vuejs' v-for -->
	<ul>
		{ users.map((user : any) => <li>{user.name}</li>)}
	</ul>

	<!-- similar to vuejs' v-if/v-show -->
	{ visible && <p>I am visible</p>}
	{ visible ? <p>I am visible</p> : <p>I am not visible</p> }
</Layout>

<style>
	h1 {
		color: red;
	}

	.purple {
		color: purple;
	}
</style>